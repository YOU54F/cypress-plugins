{
  "compilerOptions": {
    "module": "commonjs",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "target": "es2017",
    "rootDirs": ["src", "cypress"],
    "outDir": "./bin",
    "skipLibCheck": true,
    "types": [
      "node",
      "@slack/types",
      "@types/jest",
      "jest",
      "commander/typings",
      "aws-sdk-mock",
      "cypress",
      "dotenv",
      "slack-mock-typed"
    ]
  },
  "exclude": ["./untyped.d.ts"],
  "files": ["src/index.ts", "src/slack/slack-alert.ts", "src/cli/spec.ts"]
}
