{
  "name": "cypress-slack-reporter",
  "version": "0.0.2",
  "description": "A slack reporter for mochawesome reports generated by Cypress or other test frameworks using Mocha, for runs generated on CircleCI",
  "main": "./bin/index.js",
  "bin": {
    "cypress-slack-reporter": "./bin/index.js"
  },
  "keywords": ["cypress","slack","circleci","reporter","mocha","mochawesome","mochawesome-merge","marge"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/you54f/cypress-slack-reporter.git"
  },
  "author": "Yousaf Nabi",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project .",
    "lint-fix": "tslint --project . --fix",
    "test": "jest --coverage",
    "compile": "tsc --outDir ./bin --skipLibCheck true",
    "slack-js": "node bin/index.js --logger",
    "slack-js-opts": "node bin/index.js --report-dir scripts/slack/test/reportSingle --video-dir scripts/slack/test/videosDirPopulated --screenshot-dir scripts/slack/test/screenshotsDirPopulated --logger",
    "slack-ts": "ts-node scripts/slack/index.ts --logger",
    "slack-ts-opts": "ts-node scripts/slack/index.ts --report-dir scripts/slack/test/reportSingle --video-dir scripts/slack/test/videosDirPopulated --screenshot-dir scripts/slack/test/screenshotsDirPopulated --logger",
    "publish": "rimraf ./bin && npm run compile && sudo npm publish"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "@slack/types": "^1.0.0",
    "@slack/webhook": "^5.0.0"

  },
  "peerDependencies": {
    "mochawesome": "^3.1.1"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "4.0.3",
    "@types/jest": "24.0.11",
    "@types/node": "10.14.4",
    "cypress": "3.2.0",
    "cypress-cucumber-preprocessor": "1.11.0",
    "cypress-testing-library": "2.4.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "jest-junit": "6.3.0",
    "jest-stare": "1.13.2",
    "lint-staged": "8.1.5",
    "mocha": "5.2.0",
    "mochawesome": "3.1.2",
    "mocha-junit-reporter": "1.21.0",
    "mocha-multi-reporters": "1.1.7",
    "mochawesome-merge": "1.0.7",
    "mochawesome-report-generator": "3.1.5",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-focused-test": "0.5.0",
    "typescript": "3.4.4",
    "webpack": "4.29.6"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false
  },
  "lint-staged": {
    "scripts/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest-stare": {
    "coverageLink": "../lcov-report/index.html",
    "resultDir": "coverage/html"
  },
  "jest-junit": {
    "outputDirectory": "./testReports/",
    "reportDir": "testReports/unit"
  }
}
