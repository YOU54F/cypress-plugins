{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "target": "es5",
    "rootDirs": ["src"],
    "outDir": "./bin",
    "skipLibCheck": true,
    "types": [
      "node",
      "@slack/types",
      "@types/jest",
      "jest",
      "commander/typings",
      "@types/dotenv",
      "slack-mock-typed",
      "@types/dotenv",
    ]
  },
  "exclude": [
    "./untyped.d.ts"
  ],
  "files": ["src/index.ts", "src/slack/slack-alert.ts"]
}
