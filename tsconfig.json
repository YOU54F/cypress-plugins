{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "target": "es5",
    "rootDirs": ["src", "cypress"],
    "outDir": "./bin",
    "skipLibCheck": true,
    "types": [
      "node",
      "@slack/types",
      "@types/jest",
      "jest",
      "commander/typings",
      "@types/dotenv",
      "slack-mock-typed",
      "aws-sdk-mock",
      "bluebird",
      "cypress",
      "@types/dotenv",
      "slack-mock-typed"
    ]
  },
  "exclude": [
    "./node_modules/cypress/types",
    "./node_modules/cypress-testing-library/typings",
    "./untyped.d.ts"
  ],
  "include": ["./src"],
  "files": ["src/slack/index.ts", "src/slack/slack-alert.ts"]
}
